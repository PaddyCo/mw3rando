    <parameter>
      <item value="0x0000">Home</item>
      <item value="0x0200">Fairy Village</item>
      <item value="0x0400">Sewer</item>
      <item value="0x0500">Purapril City</item>
      <item value="0x0601">Lilypad, Dwarf Village</item>
      <item value="0x0e01">Childam, Darkworld Village</item>
      <item value="0x0c02">Begonia, Dragon Village</item>
    </parameter>
    <script state="run">
      <action>maincpu.pw@FF9668=param</action>
    </script>
  </cheat>
  <cheat desc="Zero X position">
    <script state="on">
      <action>maincpu.pw@FFC801=0x00</action>
